@model IEnumerable<project.Models.city>
@{
    ViewBag.Title = "المدن";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}
<div class="col-md-3"></div>
<div class="col-md-6">
    <h2 class="text-center btn-success">المحافظات</h2>

    <p>
        @Html.ActionLink("إضافة مدينة جديدة", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>#</th>
            <th>
                اسم المحافظة
            </th>
            <th>
                اسم المدينة
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).Government.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).name)

                </td>

                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
    <div class="form-group align-top">
        <div class="col-md-offset-2 col-md-10">
            <br />
            @Html.ActionLink("العودة الى القائمة السابقة", "home", "Admins", null, new { @class = "text-right" })
            <br />
        </div>
    </div>
</div>
<div class="col-md-3"></div>



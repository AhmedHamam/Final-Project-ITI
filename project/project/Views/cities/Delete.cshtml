@model project.Models.city


@{
    ViewBag.Title = "تحذير";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";

}

<div class="col-md-3"></div>
<div class="col-md-6">
    <hr />
        <dl class="dl-horizontal" style="font-size:24px;">
            <dd class="text-right text-danger">
                <span>هل تريد حذف مدينة </span>
                @Html.DisplayFor(model => model.name)
                <span>؟</span>
            </dd>
        </dl>

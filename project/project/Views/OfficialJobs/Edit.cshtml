@model project.Models.OfficialJob

@{
    ViewBag.Title = "تعديل";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}
<div class="col-md-3"></div>
<div class="col-md-6">
    <h2 class="text-center btn-success">تعديل وظيفة</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    <h6 class="text-center">اسم الوظيفة</h6>
                    @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">وصف الوظيفة</h6>
                    @Html.EditorFor(model => model.jobDescriptaion, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.jobDescriptaion, "", new { @class = "text-danger" })
                    <br />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    <br /><br />
                    @Html.ActionLink("العودة الى القائمة السابقة", "Index", null, new { @class = "text-center" })
                </div>
            </div>
        </div>
    }
</div>
<div class="col-md-6">
</div>
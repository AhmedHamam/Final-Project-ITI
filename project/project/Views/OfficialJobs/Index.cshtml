@model IEnumerable<project.Models.OfficialJob>

@{
    ViewBag.Title = "الوظائف";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}


<div class="col-md-12">
    <h2 class="text-center btn-success">الوظائف</h2>

    <p>
        @Html.ActionLink("إضافة وظيفة جديدة", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>#</th>
            <th>
                اسم الوظيفة
            </th>
            <th>
                وصف الوظيفة
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).Job)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).jobDescriptaion)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br /><br />
            @Html.ActionLink("العودة الى القائمة السابقة", "home","Admins", null, new { @class = "text-center" })
        </div>
    </div>
</div>
<div class="col-md-3"></div>



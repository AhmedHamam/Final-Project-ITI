@model project.Models.Admin
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}

<div class="col-md-3"></div>
<div class="col-md-6">
    <h2 class="text-center btn-success">إضافة مسئول للنظام جديد</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <h6 class="text-center">الاسم الاول</h6>
                    @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })

                    <br />
                    <h6 class="text-center">الاسم الأوسط </h6>
                    @Html.EditorFor(model => model.mName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mName, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">الاسم الأخير </h6>
                    @Html.EditorFor(model => model.lName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.lName, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">البريد الإلكترونى </h6>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">التليفون </h6>
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">اسم المستخدم </h6>
                    @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">كلمة المرور </h6>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    <br />
                    <h6 class="text-center">تأكيد كلمة المرور </h6>
                    @Html.EditorFor(model => model.confpassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.confpassword, "", new { @class = "text-danger" })
                    <br />
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    <br /><br />
                    @Html.ActionLink("العودة الى القائمة السابقة", "Index", null, new { @class = "text-center" })
                </div>
            </div>
        </div>
    }


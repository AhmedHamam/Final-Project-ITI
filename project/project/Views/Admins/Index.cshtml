@model IEnumerable<project.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>#</th>
        <th>
            الاسم
        </th>
        <th>
            الايميل
        </th>
        <th>
            اسم المستخدم
        </th>
        <th>
            الهاتف
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).fName)
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).mName)
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).lName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).phone)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("حذف", "Delete", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

@model project.Models.Complaint

@{
    Layout = "~/Views/Shared/_Citzen.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>تفاصيل</title>
</head>
<body>
    <div>
        <h4>تفاصيل الشكوى</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th class="col">
                        مدينة
                    </th>
                    <th class="col">
                       وزارة
                    </th>
                    <th class="col">
                        محافظة
                    </th>
                    <th class="col">
                        رقم الشكوى
                    </th>
                    <th class="col">
                        عنوان الشكوى
                    </th>
                    <th class="col">
                        تفاصيل الشكوى
                    </th>
                    <th class="col">
                        مرفقات الشكوى
                    </th>
                    <th class="col">
                       تاريخ الشكوى
                    </th>
                    <th class="col">
                        حالة الشكوى 
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>


                    <td>
                        @Html.DisplayFor(model => model.city.name)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.Entity.Title)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.Entity_Branchs.title)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.comNumber)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.comTitle)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.comDescription)
                    </td>



                    <td>
                        <img src="~/images/@Html.DisplayFor(model => model.comFile)" style="width:50%" />

                    </td>



                    <td>
                        @Html.DisplayFor(model => model.comDate)
                    </td>



                    <td>
                        @Html.DisplayFor(model => model.comStatus)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <p>
        @Html.ActionLink("تعديل", "Edit", new { id = Model.id },new { @class="btn btn-danger"}) 
        @Html.ActionLink("الرجوع", "Index",null, new { @class = "btn btn-danger" })
    </p> 
    <style>
        body {
            text-align: center;
        }

        .btn {
            display: inline;
        }
    </style>   
</body>
</html>

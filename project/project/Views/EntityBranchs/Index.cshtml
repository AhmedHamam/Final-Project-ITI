@model IEnumerable<project.Models.EntityBranchs>

@{
    ViewBag.Title = "الفروع";
    Layout = "~/Views/Shared/_adminMainLayout.cshtml";
}

<div class="col-md-12">
    <h2 class="text-center btn-success">الفروع</h2>

    <p>
        @Html.ActionLink("إضافة فرع جديد ", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                #
            </th>
            <th>
                اسم الهيئة
            </th>
            <th>
                اسم الفرع
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).Entity.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAtOrDefault(i).title)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = Model.ElementAtOrDefault(i).id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
        

    </table>
    </div>
@model project.Models.Official

@{
    ViewBag.Title = "اضافه مسئول جديد";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">

        <div class="card bg-light mb-3" style="width:80%; position:center; ">
            <article class="card-body">
                <h4 class="card-title mt-3 text-center">اضافة مسئول </h4>
                <div class="text-center mt-3">
                    <i class="fas fa-user-tie  fa-5x "></i>
                </div>

                <form method="post" class="form-horizontal  mt-2">
                    <div class="form-group input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user">
                                </i>
                            </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.fName, new { placeholder = "الاسم الاول", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.fName)
                        </div>
                    </div><!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.mName, new { placeholder = "الاسم الأوسط", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.mName)
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.lName, new { placeholder = "الاسم الأخير", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.lName)
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.userName, new { placeholder = "اسم المستخدم", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.userName)
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.email, new { placeholder = " البريد الالكتروني", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.email)
                        </div>
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                        </div>

                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.mobile, new { placeholder = "رقم الموبايل", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.mobile)
                        </div>
                    </div>

                    <!-- form-group end.// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                        </div>

                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.phone, new { placeholder = "رقم التليفون", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.phone)
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.PasswordFor(a => a.passWord, new { placeholder = "الرقم السري", @class = "form-control" })
                        </div>
                        <div class="col-sm-3 text-danger">
                            @Html.ValidationMessageFor(a => a.passWord)
                        </div>
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(a => a.job_id, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group input-group">
                        @Html.LabelFor(a => a.isLeader, "ليدر", new { @class = "col-sm-3 label-control" })

                        <div class="col-sm-8">

                            @*@Html.CheckBoxFor(a => a.isLeader);*@
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                        </div>
                        <div class="col-sm-8">

                            @Html.DropDownListFor(a => a.leaderId, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                        </div>
                        <div class="col-sm-8">

                            @Html.DropDownListFor(a => a.entityId, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group input-group">
                        @Html.LabelFor(a => a.isdeleted, "محذوف", new { @class = "col-sm-3 label-control" })

                        <div class="col-sm-8">


                            @Html.CheckBoxFor(a => a.isdeleted);
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 col-sm-offset-3">
                            <input type="submit" value="اضافه" class=" btnsub  text-center ">
                        </div>
                    </div><!-- form-group// -->

                </form>
            </article>
        </div> <!-- card.// -->

    </div>
}

